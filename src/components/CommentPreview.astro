---
import { Formatters } from "~/lib/formatters";

export interface Comment {
    id: string;
    content: string;
    createdOn: Date | string;
    user: {
        name: string;
        image: string;
    };
}

export interface Props {
    comment?: Comment;
}

const { comment } = Astro.props;
---

<li class="comment-container" id={comment?.id && `comment-${comment.id}`}>
    <div class="comment-line-container">
        <div class="comment-line"></div>
    </div>

    <img src={comment?.user.image} class="comment-user-image" />

    <div class="comment-body">
        <div>
            <div class="comment-user-name">
                <span>{comment?.user.name}</span> commented
            </div>
            <time
                datetime={comment?.createdOn && Formatters.comment.formatAsISO(comment.createdOn)}
            >
                {comment?.createdOn && Formatters.comment.formatForDisplay(comment.createdOn)}
            </time>
        </div>
        <!--  -->
        <p>{comment?.content}</p>
    </div>
</li>
