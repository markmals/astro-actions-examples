---
import { LikeButtonElement } from "../lib/client/elements/ui-like-button";

export interface Props {
    postId: number;
    likeCount: number;
    isLiked: boolean;
}

const { postId, likeCount, isLiked } = Astro.props;
---

<LikeButtonElement
    data-is-liked={isLiked}
    data-post-id={postId}
    data-like-count={likeCount}
    client:load
/>
